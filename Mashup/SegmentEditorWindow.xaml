<Window x:Class="Mashup.SegmentEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mashup"
        mc:Ignorable="d"
        Title="SegmentEditorWindow" Height="100" Width="400">
    <StackPanel Orientation="Horizontal" Height="30" HorizontalAlignment="Center" Margin="10,10,10,10">
        <Button Content="L" Style="{StaticResource btnStyle}" Command="{Binding IncreaseLeftCommand}"/>
        <Button Content="R" Style="{StaticResource btnStyle}" Command="{Binding DecreaseLeftCommand}"/>
        <Label Content="{Binding Segment}"/>
        <Button Content="L" Style="{StaticResource btnStyle}" Command="{Binding DecreaseRightCommand}"/>
        <Button Content="R" Style="{StaticResource btnStyle}" Command="{Binding IncreaseRightCommand}"/>
    </StackPanel>
</Window>
